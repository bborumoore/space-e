<div id="pref-container">
    <h3>Profile</h3>
    <h4>Name: {{name}}</h4>
    <h4>Email: {{email}}</h4>
    <div id="prefs">
        <h3>Preferences</h3>
        <p>Check boxes for events you want to follow:</p>
        <form>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="{{preference.spaceX}}" id="spaceX">
                <label class="form-check-label" for="spaceX">
                    SpaceX
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="{{preference.iss}}" id="iss">
                <label class="form-check-label" for="iss">
                    ISS
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="{{preference.snapi}}" id="snapi">
                <label class="form-check-label" for="snapi">
                    Snapi
                </label>
            </div>
            <button id="pref-btn">Update Preferences</button>
        </form>
    </div>
</div>